<%= form_for [@artist, @song] do |f| %>
  <% if @song.errors.any? %>
    <ul><% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-row">
    <label>
      <span><%= f.label :name %></span>
      <%= f.text_field :name, class: "input" %>
  </div>
  <div class="form-row">
    <%= f.submit class: "submit-button" %>
  </div>
<% end %>
