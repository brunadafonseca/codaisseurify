<h3>Songs:</h3>
<p id="empty-list">This artist has no songs yet.</p>
<%= render 'songs/form' %>

<ul id="songs-list">
  <% if @songs.present? %>
    <% @songs.each do |song| %>
      <li data-id="<%= song.id %>"><%= song.name %><button class="delete-button">x</button></li>
    <% end %>
  <% end %>
</ul>

<button type="button" id="delete-all">Delete all songs</button>

