<%= form_for @artist, html: { multipart: true } do |f| %>
  <% if @artist.errors.any? %>
    <ul><% @artist.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <%= f.submit %>

  <div class="form-group">
    <span class="btn btn-default">
      Upload Photos
      <%= file_field_tag "images[]", type: :file, multiple: true %>
    </span>
  </div>

  <div id="photos">
    <%= render 'photos/list' %>
  </div>

  <div id="songs">
    <%= render 'songs/list' %>
  </div>
  <% end %>
